<head>
  <%# <script>
    navigator.geolocation.getCurrentPosition((pos) => {
    document.querySelector("#user_location_point").value =
      `${pos.coords.latitude},${pos.coords.longitude}`;
    });
  </script> %>
</head>
<section class="px-4 py-5 gradient-custom" style=" border-radius: .5rem .5rem 0 0;">
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-12 col-md-8 col-lg-6 col-xl-6">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
      <div class="margenesT" class="card-body p-5">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div style="color: red"><%= f.error_notification %></div>
        <div class="titleT">
          <h2 class="mb-4 text-center">Registro</h2>
        </div>
        <div>
          <%= f.input :name, label:  "Nombre",
                required: true,
                input_html: { autocomplete: "name", class: "form-control" } %>
        </div>
        <div>
          <%= f.input :surname, label:  "Apellido",
                required: true,
                input_html: { autocomplete: "last_name", class: "form-control" } %>
        </div>
        <div>
          <%= f.input :email, label:  "Correo electrónico",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div>
          <%= f.input :phone, label:  "Teléfono", 
                required: true,
                input_html: { autocomplete: "phone", class: "form-control"} %>
        </div>
        <div>
          <%= f.input :dni, label:  "DNI",  
                required: true,
                input_html: { autocomplete: "DNI", class: "form-control"} %>
        </div>
        <div>
          <%= f.input :password, label: "Contraseña",
                required: true,
                # hint: ("#{@minimum_password_length} Caracteres mínimos" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "form-control"} %>
        </div>
        <div>
          <%= f.input :password_confirmation, label: "Confirmar contraseña",
                required: true,
                input_html: { autocomplete: "new-password", class: "form-control"} %>
        </div>
        <div>
          <%#= f.hidden_field :location_point %>
          <%# <%= f.input :location_point, required: true,
                input_html: { autocomplete: "location_point", id: "user_location_point"} %>
        </div> 
        <div class="form-actions">
          <%= f.button :submit, "Registrarse", class:"botonRegisterT"%>
          
          <%= link_to "Iniciar sesión", new_session_path(resource_name), class:"botonLoginT " %>
          <%# <%= render "devise/shared/links" %>
        </div>
        <div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</section>
