                  <%= link_to "Mostrar licencia", license, class:"text-center text-decoration-none btn btn-outline-dark", style:"width:100%"%>
                  </div-->
                  <%if current_user.supervisor? %>
                      <div class="text-center"> <%#darle algun nombre a la clase?%>
                        <button type="button" class="btn btn-success px-3">
                          <i class="bi bi-check-square" aria-hidden="true"><%= link_to " Autorizar", authorize_license_path(license), class:"text-light text-decoration-none"%></i>
                        </button>
                        <button type="button" class="btn btn-danger px-3">
                          <i class="bi bi-x-square" aria-hidden="true"><%= link_to " Rechazar", decline_license_path(license), class:"text-light text-decoration-none"%></i>
                        </button>
                      </div>
                    <%end%>
                   </div>
                </div>  
            </div>
            <% end %>
          </div>
        </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
