<div class="row d-flex justify-content-center align-items-center vh-100 gradient-custom">
  <div class="col-12 col-md-8 col-lg-6 col-xl-6 col-xxl-4">
    <div class="card shadow" style="border-radius: 1rem;">
      <div class="card-body p-5 text center">
            <h2 class="d-flex justify-content-center py-4">Cambio de contrase単a</h2>

            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>

              <div class="form-inputs">
                <%= f.input :password,
                            label: "Nueva contrase単a",
                            required: true,
                            autofocus: true,
                            # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class:"form-control form-control-lg"} %>
                <%= f.input :password_confirmation,
                            label: "Confirmar contrase単a",
                            required: true,
                            input_html: { autocomplete: "new-password", class:"form-control form-control-lg"} %>
              </div>

              <div class="form-actions text-center mt-4">
                <%= f.button :submit, "Cambiar contrase単a", class:"botonlogin" %>
              </div>
            <% end %>
          </div>
      </div>
  </div>
</div>

