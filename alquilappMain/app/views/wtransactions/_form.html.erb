<%= simple_form_for(@wtransaction) do |f| %>
  <%= f.error_notification %>
  

  <div class="form-inputs">
    <%= f.input :wallet_id, input_html: {value: current_user.wallet.id},as: :hidden %>

    <%= f.input :card_id,as: :hidden%>
    <%= f.input :balance, input_html: {value: current_user.wallet.balance},as: :hidden %>
    <%= f.input :entry, label: false, as: :numeric, input_html:{class:"form-control", min:'1'} %>
    
    <%= f.input :wtype, input_html: {value: "Ingreso"},as: :hidden %>
  
  <div class="p-2">
    <div class="row">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#cvcmodal">
        Depositar
      </button>
    </div>
  </div>


<div class="modal" tabindex="-1" id="cvcmodal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmar CVC</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-input">
          <%=f.input :cvc, label: "CVC/CCV", input_html:{class:"form-control", min:'0'}, as: :numeric, placeholder: "000"%>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, "Confirmar", class: "btn btn-success" %>
        <%= link_to "Cancelar", wallet_path(current_user.id), class:"text-decoration-none"%> 
      </div>
    </div>
  </div>
</div>

<% end %>