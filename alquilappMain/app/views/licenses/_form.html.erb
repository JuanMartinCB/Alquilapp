
<%= simple_form_for(@license) do |f| %>
  <%= f.error_notification %>

  <%= f.input :user_id, input_html: { value: current_user.id }, as: :hidden %>
  <%= f.input :checked, input_html: {value:false}, as: :hidden %>
  <%= f.input :authorized, input_html: {value:false}, as: :hidden %>
  <div class="form-outline mb-2">
    <%= f.input :image, label: "Licencia", input_html:{class:"form-control form-control-lg"} %>
  </div>
    <div class="form-actions">
    <%= f.button :submit, "Guardar", class:"btn-primary"  %>
  </div>
<% end %>
