<div class="row d-flex justify-content-center align-items-center vh-100 gradient-custom">
  <div class="col-12 col-md-8 col-lg-6 col-xl-6 col-xxl-4">
    <div class="card shadow" style="border-radius: 1rem;">
      <div class="card-body p-5 text center">
            <h2 class="d-flex justify-content-center py-4">Multar usuario</h2>

            <%= simple_form_for(@multum) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

              <div class="form-inputs">
                <%= f.hidden_field :user_id %>
                <%= f.input :monto,input_html: {class:"form-control form-control-lg"} %>
                <%= f.input :razon,input_html: {class:"form-control form-control-lg"} %>
              </div>
              <div class="btn btn-danger mb-0 d-flex justify-content-center mt-4">
                <%= f.button :submit, "Multar",input_html:{} %>
              </div>
            <% end %>
            <div class="mt-4">
              <i class="bi bi-arrow-left-circle"><%= link_to "Volver",:back %></i>
            </div>
          </div>
      </div>
  </div>
</div>
