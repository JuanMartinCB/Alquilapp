<section class="px-4 py-5 gradient-custom" style=" border-radius: .5rem .5rem 0 0;">
<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-12 col-sm-8 col-md-8 col-lg-6 col-xl-9">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
      <div class="margenesT" class="card-body p-5">
        <div class="titleT">
          <!--button type="button" class="btn btn-floating">
            <i class="bi bi-plus-square"> <%= link_to "Nueva licencia", new_license_path, class:"text-decoration-none"%> </i>
          </button-->
                      
          <h2 class="mb-4 text-center">Licencias</h2>
        </div>
        <div id="licenses">
        <div class="container ">
          <div class="row ">
            <% @licenses.each do |license|%>
            <div class="col-12 col-md-6 col-lg-6 col-xl-4 ">
              <div class="card ">
                <%# <%= image_tag (license.image), class:"card-img-top"%>
                <div class="card-body mb-0 ">
                  <%= render license %>
